@import '~bootstrap/dist/css/bootstrap.css'

// Colors
$black = #252525
$background = rgb(255,255,255)
$gradient = linear-gradient(135deg, #57EACB 0%, #44A2FB 51.74%, #C345FE 100%);
$purple = #671e90
$red = #f55151
$blue = #008cfe
$orange = #d47617

html
  height 100vh
body
  color $black
  background #FFF
  font-family 'Montserrat', sans-serif
  &.main
    background $background
  &.loading
    background $gradient

svg
  overflow visible

h1,h2,h3,h4,h5,h6,label
  margin 0px

a
  text-decoration none
.error
  color #ff6c6c
.v-gap
  width 100%
  height 20px
.h-gap
  display inline-block
  height 100%
  width 10px
.alert
  margin-top 16px

#app
  display flex
  flex-direction column
  min-height 100vh
  height 100%
  position relative


#actions
  display flex
  flex-direction row
  margin-left 240px

.group
  display flex
  flex-direction column
  margin 20px
#stats
  position fixed
  width 240px
  min-width 240px
  margin-left 0
  left 0
  top 0
  color #444
  border 1px solid #EEE
  height 100%
  box-shadow -8px 0px 12px #333
  h5
    font-size 16px
    color #2e4f6c
  div
    border-bottom 1px solid #CCC
    margin-top 10px
    padding 10px
    text-align center
    overflow-wrap anywhere

.form-group
  display flex
.form-control
  display flex
.action
  margin-top 20px

footer
  position fixed
  bottom 10px
  right 10px
  a
    font-family "Share Tech Mono", sans-serif
    font-size 12px
    margin 10px
    padding 5px 20px
    background #3c406a
    color #EEE
    border-radius 5px
    &:hover
      color #8af307
